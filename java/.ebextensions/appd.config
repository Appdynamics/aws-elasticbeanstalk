files:
    "/tmp/appagent.zip":
      mode: "000444"
      owner: ec2-user
      group: ec2-user
      source: https://packages.appdynamics.com/java/4.4.0.3/AppServerAgent-4.4.0.3.zip
    "/tmp/appd.sh":
      mode: "000755"
      owner: root
      group: root
      source: https://raw.githubusercontent.com/michaelenglert/aws-elasticbeanstalk/master/java/appd.sh

commands:
    01reset:
      command: "rm -rf /opt/appdynamics"
      ignoreErrors: true
    02makedir-appagent:
      command: "mkdir -p /opt/appdynamics/appagent"
    03unzip-appagent:
      command: "unzip /tmp/appagent.zip"
      cwd: /opt/appdynamics/appagent
    04perms-appagent:
      command: "chown -R webapp:webapp appagent"
      cwd: /opt/appdynamics
    05cleanup:
      command: "rm /tmp/*agent.zip"
      ignoreErrors: true

container_commands:
    01enable-appd:
      command: "/tmp/appd.sh"

option_settings:
    aws:elasticbeanstalk:application:environment:
      APPDYNAMICS_CONTROLLER_HOST_NAME:
      APPDYNAMICS_CONTROLLER_PORT:
      APPDYNAMICS_CONTROLLER_SSL_ENABLED:
      APPDYNAMICS_AGENT_ACCOUNT_NAME:
      APPDYNAMICS_AGENT_ACCOUNT_ACCESS_KEY:
      APPDYNAMICS_AGENT_APPLICATION_NAME:
